                        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" javaType="java.time.LocalDateTime"/>-->


    </resultMap>


    <select id="getAll" resultMap="cgAppResultMap">
        select *
        from crm.cg_app
    </select>

    <select id="getAppByType" resultMap="cgAppResultMap">
        select *
        from crm.cg_app
        where p_type = #{type}
        order by create_time desc limit 1;
    </select>


    <select id="getAllAppByType" resultMap="cgAppResultMap">
        select *
        from crm.cg_app
        where p_type = #{type}

    </select>

</mapper>
