<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rookie.bigdata.mybatis.mapper.CgAppMapper">


    <resultMap id="cgAppResultMap" type="com.rookie.bigdata.common.CgApp">
