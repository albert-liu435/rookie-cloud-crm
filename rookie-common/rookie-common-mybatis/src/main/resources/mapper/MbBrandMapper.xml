<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rookie.bigdata.mybatis.mapper.MbBrandMapper">


    <resultMap id="mbBrandResultMap" type="com.rookie.bigdata.common.MbBrand">
        <id column="id" property="id" jdbcType="BIGINT" javaType="long"/>
        <result column="brand_code" property="brandCode" jdbcType="VARCHAR" javaType="java.lang.String"/>

        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" javaType="java.time.LocalDateTime"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" javaType="java.time.LocalDateTime"/>


    </resultMap>


    <select id="getAll" resultMap="mbBrandResultMap">
        select *
        from crm.mb_brand
    </select>


    <select id="getBrandByCode" resultMap="mbBrandResultMap">
        select *
        from crm.mb_brand
        where brand_code = #{brandCode} limit 1;
    </select>



</mapper>
